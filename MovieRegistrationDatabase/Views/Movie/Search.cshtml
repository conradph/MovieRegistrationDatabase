

@using (@Html.BeginForm("Search", "Movie", FormMethod.Post))
{
    @Html.RadioButton("option", "title") <label>Title</label>
    @Html.RadioButton("option", "genre") <label>Genre</label>
    @Html.RadioButton("option", "id") <label>ID</label>
    @Html.TextBox("search")
    <input type="submit"
           name="submit"
           value="Search" />
}